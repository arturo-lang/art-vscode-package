{
    "name": "arturo",
    "displayName": "Arturo",
    "description": "Syntax highlighting for the Arturo programming language",
    "version": "0.5.0",
    "publisher": "drkameleon",
    "repository": "https://github.com/arturo-lang/art-vscode-package",
    "icon": "images/grayLogo.png",
    "engines": {
        "vscode": "^1.52.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "art",
            "aliases": ["Arturo", "art"],
            "extensions": [".art"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "art",
            "scopeName": "source.arturo",
            "path": "./syntaxes/art.tmLanguage.json"
        }]
    }
}