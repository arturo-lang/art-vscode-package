{
  "name": "arturo",
  "displayName": "Arturo",
  "description": "Syntax highlighting for the Arturo programming language",
  "version": "0.7.2",
  "publisher": "drkameleon",
  "repository": "https://github.com/arturo-lang/vscode-extension",
  "icon": "icons/gray.png",
  "engines": {
    "vscode": "^1.52.0"
  },
  "activationEvents": [
    "onLanguage:art",
    "onCommand:arturo.runtime.repl",
    "onCommand:arturo.runtime.run",
    "onCommand:arturo.runtime.run-current",
    "onCommand:arturo.runtime.bundle",
    "onCommand:arturo.meta.report-issue",
    "onCommand:arturo.meta.open-docs",
    "onCommand:arturo.package.install",
    "onCommand:arturo.package.uninstall",
    "onCommand:arturo.package.list",
    "onCommand:arturo.package.remote",
    "onCommand:arturo.package.update"
  ],
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "arturo.runtime.repl",
        "title": "Arturo: Open REPL"
      },
      {
        "command": "arturo.runtime.run",
        "title": "Arturo: Run File"
      },
      {
        "command": "arturo.runtime.run-current",
        "title": "Arturo: Run Current File",
        "icon": "$(play)"
      },
      {
        "command": "arturo.runtime.bundle",
        "title": "Arturo: Bundle File"
      },
      {
        "command": "arturo.meta.report-issue",
        "title": "Arturo: Report Issue"
      },
      {
        "command": "arturo.meta.open-docs",
        "title": "Arturo: Open Documentation"
      },
      {
        "command": "arturo.package.install",
        "title": "Arturo: Install Package"
      },
      {
        "command": "arturo.package.uninstall",
        "title": "Arturo: Uninstall Package"
      },
      {
        "command": "arturo.package.list",
        "title": "Arturo: List Installed Packages"
      },
      {
        "command": "arturo.package.remote",
        "title": "Arturo: List Registered Packages"
      },
      {
        "command": "arturo.package.update",
        "title": "Arturo: Update All Packages"
      }
    ],
    "menus": {
      "editor/title/run": [
        {
          "command": "arturo.runtime.run-current",
          "group": "navigation@0",
          "when": "resourceLangId == art && !isInDiffEditor && !virtualWorkspace"
        }
      ]
    },
    "languages": [
      {
        "id": "art",
        "aliases": [
          "Arturo",
          "art"
        ],
        "extensions": [
          ".art"
        ],
        "configuration": "./grammar/config.json",
        "icon": {
          "light": "./icons/gray.png",
          "dark": "./icons/gray.png"
        }
      },
      {
        "id": "art-test",
        "aliases": [
          "Unitt Arturo Tests",
          "art-test"
        ],
        "extensions": [
          ".test.art",
          ".spec.art"
        ],
        "configuration": "./grammar/config.json",
        "icon": {
          "light": "./icons/purple.png",
          "dark": "./icons/purple.png"
        }
      },
      {
        "id": "art-config",
        "aliases": [
          "Arturo Config",
          "art-config"
        ],
        "filenames": [
          "info.art",
          "config.art"
        ],
        "configuration": "./grammar/config.json",
        "icon": {
          "light": "./icons/purple.png",
          "dark": "./icons/purple.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "art",
        "scopeName": "source.arturo",
        "path": "./grammar/definition.json"
      },
      {
        "language": "art-test",
        "scopeName": "source.arturo",
        "path": "./grammar/definition.json"
      },
      {
        "language": "art-config",
        "scopeName": "source.arturo",
        "path": "./grammar/definition.json"
      }
    ],
    "snippets": [
      {
        "language": "art",
        "path": "./snippets/arithmetic.json"
      },
      {
        "language": "art",
        "path": "./snippets/bitwise.json"
      },
      {
        "language": "art",
        "path": "./snippets/collections.json"
      },
      {
        "language": "art",
        "path": "./snippets/comparison.json"
      },
      {
        "language": "art",
        "path": "./snippets/core.json"
      },
      {
        "language": "art",
        "path": "./snippets/exceptions.json"
      },
      {
        "language": "art",
        "path": "./snippets/io.json"
      },
      {
        "language": "art",
        "path": "./snippets/iterators.json"
      },
      {
        "language": "art",
        "path": "./snippets/logic.json"
      },
      {
        "language": "art",
        "path": "./snippets/numbers.json"
      },
      {
        "language": "art",
        "path": "./snippets/strings.json"
      },
      {
        "language": "art",
        "path": "./snippets/types.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/vscode": "^1.51.0",
    "tslint": "^5.16.0",
    "typescript": "^5.9.3"
  }
}
